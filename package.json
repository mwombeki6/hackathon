{
  "name": "blockengage",
  "version": "1.0.0",
  "description": "Blockchain-powered task management with engagement perks for AlphachainLive network",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "cd server && nodemon index.js",
    "build": "npm run build:contracts && npm run build:mobile",
    "build:contracts": "cd contracts && npx hardhat compile",
    "build:mobile": "cd mobile && npx react-native run-android",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.js --network alphachain",
    "test": "cd contracts && npx hardhat test",
    "db:migrate": "node server/scripts/migrate.js",
    "db:seed": "node server/scripts/seed.js"
  },
  "keywords": ["blockchain", "task-management", "gamification", "alphachain"],
  "author": "BlockEngage Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "web3": "^4.1.1",
    "date-fns": "^2.30.0",
    "node-cron": "^3.0.2",
    "socket.io": "^4.7.2",
    "multer": "^1.4.5-lts.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "@types/node": "^20.5.9"
  }
}
